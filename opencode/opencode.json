{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["guildelines/*.md"],
  "permission": {
    "edit": "ask",
    "bash": {
      "git status *": "allow",
      "git diff *": "allow",
      "ls *": "allow",
      "*": "ask"
    }
  "keybinds": {
    "session_child_cycle": "none",
    "session_child_cycle_reverse": "none"
  }
}

{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["guildelines/*.md"],
  "permission": {
    "edit": "ask",
    "bash": {
      "sudo *": "deny",
      "wget *": "deny",
      "dd *": "deny",
      ":(){ :|:& }; *": "deny",
      "git add *": "deny",
      "git diff *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "*": "ask"
    }
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": true
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:MCPHUB_GITHUB_TOKEN}"
      },
      "enabled": true
    }
  },
  "keybinds": {
    "session_child_cycle": "none",
    "session_child_cycle_reverse": "none"
  }
}

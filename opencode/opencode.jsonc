{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["guidelines/*.md"],
  "permission": {
    "edit": "ask",
    "bash": {
      "sudo *": "deny",
      "wget *": "deny",
      "dd *": "deny",
      ":(){ :|:& }; *": "deny",
      "git add *": "deny",
      "git diff *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "*": "ask",
    },
  },
  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5-mini": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"],
          },
        },
      },
    },
  },
  "mcp": {
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server",
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:MCP_GITHUB_TOKEN}",
      },
      "enabled": true,
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:MCP_CONTEXT7_API_KEY}",
      ],
      "enabled": true,
    },
  },
}
